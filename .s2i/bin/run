#!/bin/bash

echo "---> Starting StickyTux application"

# Start Django with Gunicorn
exec gunicorn backend.wsgi:application \
    --bind 0.0.0.0:8080 \
    --workers ${WEB_CONCURRENCY:-4} \
    --timeout 60 \
    --keep-alive 2 \
    --max-requests 1000 \
    --access-logfile - \
    --error-logfile -